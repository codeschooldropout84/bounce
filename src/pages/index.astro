---
const site = "bounce.it.com";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
    <title>{site}</title>
    <meta name="description" content={site} />

    <style>
      :root { --bg: #121826; }

      * { box-sizing: border-box; }
      html, body { height: 100%; }

      body {
        margin: 0;
        background: var(--bg);
        overflow: hidden;
      }

      .frame {
        width: 100vw;
        height: 100dvh;
        display: grid;
        place-items: center;
        background: var(--bg);
      }

      img {
        display: block;
        width: 100vw;
        height: 100dvh;
        object-fit: contain;     /* show whole poster */
        object-position: center; /* centered */
      }
    </style>
  </head>

  <body>
    <main class="frame" aria-label={site}>
      <img src="/landing.png" alt={site} />
    </main>
  </body>
</html>
