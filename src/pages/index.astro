---
const site = "bounce.it.com";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
    <title>{site}</title>
    <meta name="description" content={site} />

    <style>
      :root { --bg: #121826; }

      * { box-sizing: border-box; }
      html, body { height: 100%; }

      body {
        margin: 0;
        background: var(--bg);
        overflow: hidden;
      }

      .frame {
        width: 100vw;
        height: 100dvh;
        display: grid;
        place-items: center;
        background: var(--bg);
      }

      picture, img {
        width: 100vw;
        height: 100dvh;
        display: block;
      }

      img {
        object-fit: cover;      /* fill screen nicely */
        object-position: center;
      }
    </style>
  </head>

  <body>
    <main class="frame" aria-label={site}>
      <picture>
        <!-- Phone: use 9:16 crop -->
        <source media="(max-width: 768px)" srcset="/landing-mobile.png" />
        <!-- Default: desktop -->
        <img src="/landing-desktop.png" alt={site} />
      </picture>
    </main>
  </body>
</html>
